    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Download data",
            "python": "${command:python.interpreterPath}",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data.py",
            "console": "integratedTerminal",
            "args": "--use_cache -t SPY"
        },
        {
            "name": "Predict",
            "python": "${command:python.interpreterPath}",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/predict.py",
            "console": "integratedTerminal",
            "args": "--ticker SPY"
        },
        {
            "name": "Train",
            "python": "${command:python.interpreterPath}",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
        }
    ]
}